{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NPM_FLAGS": "--no-audit --no-fund",
    "NODE_OPTIONS": "--max_old_space_size=4096"
  }
} 